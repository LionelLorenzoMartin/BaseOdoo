<odoo>
    <data>
        <act_window id="BaseOdoo_tomates_action" name="amps"
                    res_model="BaseOdoo.amps" />
        <menuitem id="BaseOdoo_tomates_menu"
                  name="tomates"
                  action="BaseOdoo_tomates_action"
                  parent=""
                  sequence="1" />

        <record id="BaseOdoo_tomates_view_tree" model="ir.ui.view">
            <field name="name">Lista tomates</field>
            <field name="model">BaseOdoo.tomates</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="codigo" />
                    <field name="marca" />
                    <field name="modelo" />
                    <field name="precio" />
                </tree>
            </field>
        </record>

        <record id="BaseOdoo_tomates_view_form" model="ir.ui.view">
            <field name="name">Formulario tomates</field>
            <field name="model">BaseOdoo.tomates</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="codigo" />
                        <field name="marca" />
                        <field name="modelo" />
                        <field name="precio" />
                    </group>
                </form>
            </field>
        </record>

        <record id="BaseOdoo_tomates_view_search" model="ir.ui.view">
            <field name="name">Busqueda tomates</field>
            <field name="model">BaseOdoo.tomates</field>
            <field name="arch" type="xml">
                <search>
                    <field name="codigo" />
                    <field name="marca" />
                    <field name="modelo" />
                    <field name="precio" />
                </search>
            </field>
        </record>

    </data>
</odoo>